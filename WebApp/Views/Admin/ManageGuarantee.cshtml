@using Domain.Entity.Product
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutAdmin";
    List<Guarantee> guarantees = ViewBag.Guarantee;
}

@section link
{
    <style>
    .modal{
        top: 80px;
    }
</style>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">مدیریت گارانتی</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Admin")">خانه</a>
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
           
            <!-- /.col -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link active show" href="#activity" data-toggle="tab">گارانتی ها</a>
                            </li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active show" id="activity">
                                <form style="background-color:	rgb(220,220,220,0.4)" class="d-flex justify-content-around p-2"
                                      asp-action="InsertGuarantee" asp-controller="Admin" method="post">
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">عنوان گارانتی</label>
                                        <input name="title" class="form-control" id="exampleInputPassword1">
                                    </div>
                                    <div class="d-flex flex-column align-content-center justify-content-center ">
                                        <div class="form-input">
                                            <button type="submit" class="btn btn-primary">ثبت</button>
                                        </div>
                                    </div>
                                </form>

                            </div>
                            <div class="card mt-3">
                                <div class="input-group p-3  m-2">
                                    <input type="text" class="form-control " name="search" style="border-radius: 0px 5px 5px 0px; !important;" placeholder="جستجو">
                                    <button class="input-group-text" type="submit" style=" border-radius: 5px 0px 0px 5px !important;cursor: pointer !important;">جستجو</button>
                                </div>
                                <div class="card-body p-0">
                                    <table class="table table-condensed">
                                        <tbody>
                                        <tr>
                                            <th class="text-center" style="width: 5%">id</th>
                                            <th class="text-center" style="width: 20%">عنوان</th>
                                            <th class="text-center" style="width: 10%">#</th>
                                        </tr>
                                        @{
                                            if (guarantees.Count < 1)
                                            {
                                                <tr>
                                                    <td> </td>
                                                    <td> </td>
                                                    <td class="text-center">
                                                        یافت نشد
                                                    </td>
                                                </tr>
                                            }
                                            else
                                            {
                                                foreach (var i in guarantees)
                                                {
                                                    <tr>
                                                        <td class="text-center">@i.Id</td>
                                                        <td class="text-center">@i.Title</td>
                                                        <td class="text-center">
                                                            <form>
                                                                <a class="badge bg-warning text-muted modalProduct" data-toggle="modal" data-target="#exampleModal">ویرایش</a>
                                                                <input type="text" name="mId" class="mId" value="@i.Id" hidden="hidden"/>
                                                                <input type="text" name="mTitle" class="mTitle" value="@i.Title" hidden="hidden"/>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<!-- Modal -->
<div class="modal fade exampleModal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" style="max-width: 700px !important;">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">ویرایش محصول</h5>
                <button type="button" class="close text-left" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" class="idP" id="id" required="required" name="Id" hidden="hidden">
                <div class="d-flex justify-content-between">
                    <div class="input-group p-3  m-2">
                        <span class="input-group-text" style="border-radius: 0px 5px 5px 0px;" id="">عنوان برند</span>
                        <input type="text" id="TitleEdit" style="border-radius: 5px 0px 0px 5px;" class="form-control nameP" required="required" name="Name">
                    </div>
                    <div class="input-group p-3 m-2">
                        <span class="input-group-text" style="border-radius: 0px 5px 5px 0px;" id="">توضیحات</span>
                        <input type="text" id="DescEdit" style="border-radius: 5px 0px 0px 5px;" class="form-control brandP" required="required" name="Brand">
                    </div>
                </div>
               
                <div class=" m-2  p-3 " style="background-color:	rgb(220,220,220,0.4)">
                    <input type="file" id="Image" name="Image" title="test" class="form-control">
                    <div class="input-group  p-1" style="justify-content: space-between;">
                        <img id="LogoEdit" src="" style="object-fit: cover;text-align: center" class="imageThreeP" width="130"/>
                        <input type="text"   name="Logo" class="mImageThreeP" hidden="hidden"/>
                    </div>
                </div>
            

            </div>
            <div class="modal-footer d-flex justify-content-between gap-2">
                <button type="button" class="btn btn-danger" onclick="">حذف محصول</button>
                <button type="submit" class="btn btn-primary " onclick="">ذخیره تغیرات</button>
            </div>
        </form>
    </div>
</div>

@section script{

    <script>
 
    $(document).ready(function () {

        $(".modalProduct").click(function () {
            var currentrow = $(this).closest("form");

            $("#idP").val(currentrow.find($("input.mId[type=text]")).val());
            $("#TitleEdit").val(currentrow.find($("input.mTitle[type=text]")).val());
            $("#DescEdit").val(currentrow.find($("input.mDesc[type=text]")).val());
            $('#SubCatIdEdit').val(currentrow.find($("input.mSubCategoryId[type=text]")).val());
            $('#LogoEdit').attr("src", '/images/Brand/'+(currentrow.find($("input.mLogo[type=text]")).val()));
        });
    });
</script>
    <script>
 
    function UpdateProduct(){
        var product = new FormData();
        product.append("Id",$("#id").val());
        product.append("Name",$("#Name").val());
        product.append("Brand",$("#Brand").val());
        product.append("ImageBanner",$("#ImageBanner")[0].files[0]);
        product.append("ImageBannerName",$("#ImageBannerName").val());
        product.append("ImageThumb",$("#ImageThumb")[0].files[0]);
        product.append("ImageThumbName",$("#ImageThumbName").val());
        product.append("Image",$("#Image")[0].files[0]);
        product.append("ImageName",$("#ImageName").val());
        product.append("Weight",$("#Weight").val());
        product.append("Wages",$("#Wages").val());
        product.append("Inventory",$("#Inventory").val());
        product.append("CategoryId",$("#CategoryIdProd").val());
        $.ajax({
            type: "Put",
            data: product,
            url: "/Admin/UpdateProduct",
            processData: false,
            contentType: false,
            success: function (data) {
                window.location.href= "/admin/product";
            },
            error: function (xhr) {
                alert("خطای داخلی در سرور");
            }
        });
    };
    function softDeleteProduct(){
        window.location.href= "/admin/SoftDeleteProduct?id="+$("#id").val();
    }
</script>
}