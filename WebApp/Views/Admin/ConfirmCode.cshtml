@using Application.Dtos.User
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    UserLoginDto user = ViewBag.exUser;
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>پنل مدیریت | ورود به حساب</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <!-- bootstrap rtl -->
    <link rel="stylesheet" href="~/dist/css/bootstrap-rtl.min.css">
    <!-- template rtl version -->
    <link rel="stylesheet" href="~/dist/css/custom-style.css">
</head>
<body class="hold-transition lockscreen">
<!-- Automatic element centering -->
<div class="lockscreen-wrapper">
    <div class="lockscreen-logo">
        <p >
            <b>پنل مدیریت</b>
        </p>
    </div>
    <!-- User name -->
    <div class="lockscreen-name">@user.Name @user.Family</div>
    <!-- START LOCK SCREEN ITEM -->
    <div class="lockscreen-item">
        <!-- lockscreen image -->
        <div class="lockscreen-image">
            <img src="/assetsCli/images/man.png" alt="User Image">
        </div>
        <form class="lockscreen-credentials">
            <div class="input-group">
                <input id="Code" class="form-control" placeholder="کد ورود به حساب">
                <input id="phoneNumber" value="@user.PhoneNumber" hidden="hidden">
                <div class="input-group-append">
                    <a class="btn" onclick="withPassword()">
                        <i class="fa fa-arrow-right text-muted"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
     function withPassword(){
          $.ajax({
                 type: "Post",
                 data: {code: $('#Code').val(),phoneNumber:$('#phoneNumber').val()},
                 url: "/Admin/ConfirmCode",
                 success: function (data) {
                  window.location.href= "/admin/index";
                 },
                 error: function (xhr) {
                    alert("کد وارد شده معتبر نمیباشد");
                 }
             });
           }
</script>
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>