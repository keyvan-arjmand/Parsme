<body>

<!-- login----------------------------------->
<div class="container">
    <div class="row">
        <div class="col-lg">
            <section class="page-account-box">
                <div class="col-lg-6 col-md-6 col-xs-12 mx-auto">
                    <div class="ds-userlogin">
                        <a href="#" class="account-box-logo">Parsme</a>
                        <div class="account-box">
                            <div class="Login-to-account mt-4">
                                <div class="account-box-content">
                                    <h4 class="mb-2">ورود با کد یکبار مصرف</h4>
                                    <div class="form-account text-right">
                                        <div class="form-account-title">
                                            <label>شماره موبایل</label>
                                            <input id="Phone" type="text" class="number-email-input" >
                                        </div>
                                        <div class="form-row-account">
                                            <button class="btn btn-primary " onclick="Login()">ارسال کد</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
