                                    ${item.productColors[0].price}<span>تومان</span>
                                </span>
                            </ins>
                        </div>
                    </div>
</div>
                `;
                        });

                        // Set the innerHTML
                        var htmlContainer = `
                <div class="owl-stage"  style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 288px;">
                                            ${html}
                 </div>
            `;
                        document.getElementById("prodcomp").innerHTML = html;

                        // Initialize Owl Carousel
                       $('.owl-carousel').owlCarousel({
                           loop: true,
                           margin: 10,
                           nav: true,
                           items: 1
                       });
                    },
                    error: function(xhr) {
                        console.error("خطا در درخواست AJAX: ", xhr);
                    }
                });
            }


            $('#searchInput').on('input', onInputChange);
        });

        function handleInputChange() {
        const searchInput = document.getElementById('searchInput');
        const clearBtn = document.getElementById('clearBtn');
        if (searchInput.value) {
            clearBtn.style.display = 'inline-block';
        } else {
            clearBtn.style.display = 'none';
        }
    }

    function clearSearch() {
        const searchInput = document.getElementById('searchInput');
        searchInput.value = '';
        handleInputChange();
        // Trigger the onchange event manually after clearing the input
        searchInput.dispatchEvent(new Event('change'));
    }

    document.getElementById('searchInput').addEventListener('input', handleInputChange);

</script>
