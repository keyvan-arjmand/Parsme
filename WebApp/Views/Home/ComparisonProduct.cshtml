                                            <i class="fa fa-star active"></i>
                                            <i class="fa fa-star active"></i>
                                            <i class="fa fa-star active"></i>
                                            <i class="fa fa-star active"></i>
                                        </div>
                                    </td>
                                }
                            }

                        </tr>
                        <tr>
                            <th></th>
                            @{
                                foreach (var i in prods)
                                {
                                    <td>
