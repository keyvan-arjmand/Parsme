<script src="/assetsCli/js/vendor/wNumb.js"></script>
<script src="/assetsCli/js/vendor/nouislider.min.js"></script>
<!-- main js-/assetsCli--------------------------------------------->
<script src="/assetsCli/js/main.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function validateIranianMobileNumber(phoneNumber) {
        // الگوی شماره موبایل ایران
        const iranMobileRegex = /^(\+98|0)?9\d{9}$/;

        // بررسی مطابقت شماره
        return iranMobileRegex.test(phoneNumber);
    }
    document.getElementById("loginButton").addEventListener("click", function () {
        const phoneInput = document.getElementById("Phone").value.trim();

        if (phoneInput === '') {
            Swal.fire({
                icon: 'info',
                title: 'وارد کردن شماره!',
                text: 'لطفاً شماره تلفن را وارد کنید.',
                confirmButtonText: 'باشه'
            });
        } else if (!validateIranianMobileNumber(phoneInput)) {
            Swal.fire({
                icon: 'warning',
                title: 'شماره نامعتبر!',
                text: 'شماره تلفن وارد شده معتبر نمی‌باشد. لطفاً شماره صحیح وارد کنید.',
                confirmButtonText: 'باشه'
            });
        } else {
            // اگر شماره معتبر باشد، فرم ارسال می‌شود
            document.getElementById("loginForm").submit();
        }
    });
</script>
</html>