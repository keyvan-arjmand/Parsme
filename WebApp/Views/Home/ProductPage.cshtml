    List<Product> basket = ViewBag.BasketProd;
    List<Product> prods = ViewBag.Prods;
    List<MainCategory> categories = ViewBag.Categories;
    List<SearchResult> searchResults = ViewBag.Search;
    FooterLink footerLink = ViewBag.FooterLink;
    SeoPage seoPage = ViewBag.SeoPage;

    var catDetail = new List<CatDetailEdit>();
    foreach (var i in prod.ProductDetails)
    {
        if (catDetail.Any(x => x.FeatureId == i.CategoryDetail.FeatureId))
        {
            var result = catDetail.FirstOrDefault(x => x.FeatureId == i.CategoryDetail.FeatureId);

            result.CategoryDetails.Add(new CategoryDetailDtoEdit
            {
                Option = i.CategoryDetail.Option, DataType = (int)i.CategoryDetail.DataType, Priority = i.CategoryDetail.Priority, Title = i.CategoryDetail.Title,
                FeatureId = i.CategoryDetail.FeatureId, ShowInSearch = i.CategoryDetail.ShowInSearch, SubCategoryId = prod.SubCategoryId, Id = i.CategoryDetailId, Value = i.Value
            });
        }
        else
        {
            var li = new CatDetailEdit();
            li.Feature = i.CategoryDetail.Feature;
            li.FeatureId = i.CategoryDetail.FeatureId;
            li.CategoryDetails.Add(new CategoryDetailDtoEdit
            {
                Option = i.CategoryDetail.Option, DataType = (int)i.CategoryDetail.DataType, Priority = i.CategoryDetail.Priority, Title = i.CategoryDetail.Title,
                FeatureId = i.CategoryDetail.FeatureId, ShowInSearch = i.CategoryDetail.ShowInSearch, SubCategoryId = prod.SubCategoryId, Id = i.CategoryDetailId, Value = i.Value
            });
            catDetail.Add(li);
        }
    }
}

