<div class="card-header p-2">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link active show" href="#activity" data-toggle="tab">بنرها</a>
        </li>
    </ul>
</div><!-- /.card-header -->
<div class="card-body">
<div class="tab-content">
<div class="tab-pane active show" id="activity">
<div class="card mt-3">
    <div class="card-body p-0">
        <table class="table table-condensed">
            <tbody>
            <tr>
                <th class="text-center" style="width: 10%">id</th>
                <th class="text-center" style="width: 30%">تصویر</th>
                <th class="text-center" style="width: 20%">عنوان</th>
                <th class="text-center" style="width: 30%">لینک</th>
                <th class="text-center" style="width: 10%">#</th>
            </tr>
            @{
                if (bannerModels.Count < 1)
                {
                    <tr>
                        <td> </td>
                        <td> </td>
                        <td class="text-center">
                            یافت نشد

                        </td>
                    </tr>
                }
                else
                {
                    foreach (var i in bannerModels)
                    {
                        <tr>
                            <td class="text-center">@i.Id</td>
                            <td class="text-center"><img src="/Images/Banner/@i.Image" style="max-width: 150px!important;"/></td>
                            <td class="text-center">@i.Title</td>
                            <td class="text-center" style="
    white-space: normal; /* اجازه می‌دهد متن شکسته شود */
    word-break: break-word; /* متن طولانی را در هر کلمه بشکند */
    overflow-wrap: break-word; /* پشتیبانی گسترده‌تر برای شکستن کلمات */
    text-align: center; 
    letter-spacing: -0.3px;
    line-height: 25px;
    max-height: 90px; /* محدود کردن ارتفاع */
    overflow: hidden; /* پنهان کردن بخش‌های اضافی */
    ">@i.Href</td>
                          
                            <td class="text-center">
                                <form>
                                    <a class="badge bg-warning text-muted modalProduct" data-toggle="modal" data-target="#exampleModal">ویرایش</a>
                                    <input type="text" name="mId" class="mId" value="@i.Id" hidden="hidden"/>
                                    <input type="text" name="mTitle" class="mHref" value="@i.Href" hidden="hidden"/>
                                    <input type="text" name="mTitle" class="mImage" value="@i.Image" hidden="hidden"/>
                                </form>
                            </td>
                        </tr>
                    }
                }
            }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

