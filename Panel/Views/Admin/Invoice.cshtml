                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5><i class="fa fa-info"></i> نکته :</h5>
                </div>


                <!-- Main content -->
                <div class="invoice p-3 mb-3">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <i class="fa fa-globe"></i> فروشگاه اینترنتی پارس می
                                <small class="float-left">Date: @factor.InsertDate.ToPersianTime()</small>
                            </h4>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <div class="col-sm-4 invoice-col">
                            از
                            <address>
                                <strong>فروشگاه اینترنتی پارس می</strong><br>
                                آدرس<br>
                                تهران خیابان ولیعصر
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            به
                            <address>
                                <strong>@factor.User.Name @factor.User.Family</strong><br>
                                آدرس خریدار<br>
                                @factor.UserAddress.Address
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <b>سفارش @factor.Id</b><br>
                            <br>
                            <b>کد سفارش :</b> @factor.FactorCode<br>
                            <b>تاریخ پرداخت :</b> @factor.InsertDate.ToPersianTime()e<br>
                            <b>اکانت :</b> @factor.UserId
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <!-- Table row -->
                    <div class="row">
                        <div class="col-12 table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>id</th>
                                    <th>تعداد</th>
                                    <th>محصول</th>
                                    <th>رنگ</th>
                                    <th>قیمت کل</th>
                                </tr>
                                </thead>
                                <tbody>
                                @{
                                    foreach (var i in factor.Products.ToList())
                                    {
                                        @* var prod = factor.Products.Select(x => x.ProductColor.Product).FirstOrDefault(x => x.Id == i.ProductColor.ProductId); *@
                                        @* <tr> *@
                                        @*     <td>@prod.Id</td> *@
                                        @*     <td>@i.Count</td> *@
                                        @*     <td>@prod.PersianTitle</td> *@
                                        @*     <td>@prod.ProductColors.FirstOrDefault(x=>x.Id==i.ProductColorId).Color.Title</td> *@
                                        @*     <td>@factor.Products.Select(x => x.ProductColor).FirstOrDefault(x => x.ProductId == prod.Id).Price.ToString("N0") تومان</td> *@
                                        @* </tr> *@
                                    }
                                }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <div class="row">
                        <!-- accepted payments column -->
                        <div class="col-6">
                            <p class="lead">روش های پرداخت :</p>

                            <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                                پرداخت از طریق کلیه کارت های بانکی عضو شتاب
                            </p>
                        </div>
                        <!-- /.col -->
                        <div class="col-6">
                            <p class="lead"> پرداخت : @factor.InsertDate.ToPersianTime()</p>

                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th style="width:50%">مبلغ کل :</th>
                                        @{
                                            var price = factor.Amount + factor.DiscountAmount +factor.AmountPrice;
                                        }
                                        <td>@price.ToString("N0")</td>
                                    </tr>
                                    <tr>
                                        <th>مالیات (9%)</th>
                                        @{
                                            var tax = factor.Amount / 100 * 9;
                                        }
                                        <td>@tax.ToString("N0") تومان</td>
                                    </tr>
                                    <tr>
                                        <th>تخفیف :</th>
                                        @{
                                            var discount = factor.DiscountAmount + factor.AmountPrice;
                                        }
                                        <td>@discount.ToString("N0") تومان</td>
                                    </tr>
                                    <tr>
                                        <th>مبلغ قابل پرداخت:</th>
                                        <td>@factor.Amount.ToString("N0") تومان</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.invoice -->
                </div><!-- /.col -->
            </div><!-- /.row -->
