                                                <img src="/Images/Logo/@saleServices.Desc5Logo"  id="Desc5Logo" style="object-fit: cover;border-radius: 8px" class="imageOneP"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="w-100">
                                        <button class="btn btn-success" type="submit"> ثبت</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

@section script{

    <script>

    $('#Desc1LogoIn').on('change', function(event) {
        var input = event.target;
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $('#Desc1Logo').attr('src', e.target.result).show();
            }
            reader.readAsDataURL(input.files[0]);
        }
