@using Domain.Entity.IndexPage
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
Layout = "_LayoutAdmin";
ContactPage about = ViewBag.Contact;
}

@section link
{
<style>
    .modal{
        top: 80px;
    }
</style>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">مدیریت صفحه درباره ما</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Admin")">خانه</a>
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">

            <!-- /.col -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2 d-flex justify-content-start">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link active show" href="#activity" data-toggle="tab">تماس با ما</a>
                            </li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active show" id="activity">
                                <form style="background-color:	rgb(220,220,220,0.4)" class="d-flex justify-content-between p-2 flex-wrap w-100"
                                      asp-action="InsertContactUs" asp-controller="Admin" method="post" enctype="multipart/form-data">
                                    <div class="d-flex justify-content-between w-100 flex-wrap">
                                        <div class="d-flex flex-column">
                                            <label for="exampleInputPassword1">تصویر شاخص</label>
                                            <input type="file" name="Image" id="ImageIn" class="form-control">
                                        </div>

                                        <div class="input-group p-3 " style="justify-content: center;">
                                            <img src="/Images/Pages/@about.Image" id="Image" style="object-fit: cover;border-radius: 8px" class="imageOneP"/>
                                        </div>
                                    </div>
                                    <div class="form-group w-100">
                                        <label for="exampleInputPassword1">عنوان معرفی صفحه</label>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <textarea id="editor1" name="desc" required="required" class="form-control " style="width: 100%">
                                                                                       
</textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between flex-wrap w-100">
                                        <div class="d-flex flex-column">
                                            <label for="exampleInputPassword1">توضیحات </label>
                                            <textarea type="text" name="SeoDesc"  id="Desc" class="form-control ">@about.SeoDesc</textarea>
                                        </div>

                                        <div class="d-flex flex-column">
                                            <label for="exampleInputPassword1">عنوان </label>
                                            <input type="text" name="SeoTitle" id="SmallSideBannerin" value="@about.SeoTitle" title="test" class="form-control">
                                        </div>
                                        <div class="d-flex flex-column">
                                            <label for="exampleInputPassword1">لینک</label>
                                            <input name="SeoCanonical" value="@about.SeoCanonical" class="form-control" id="exampleInputPassword1">
                                        </div>

                                    </div>
                                    <div class="d-flex flex-column align-content-center justify-content-center m-2 p-2">
                                        <div class="form-input">
                                            <button type="submit" class="btn btn-primary">ثبت</button>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

@section script{
    <script>
        window.addEventListener("load", (e) => {
            document.getElementById('editor1').innerHTML = '@about.Desc';

            ClassicEditor
                .create(document.querySelector('#editor1'), {
                    // پشتیبانی کامل از تگ‌های HTML
                    htmlSupport: {
                        allow: [
                            {
                                name: /.*/,
                                attributes: true,
                                classes: true,
                                styles: true
                            }
                        ]
                    },
                    // تنظیم نوار ابزار با همه گزینه‌ها
                    toolbar: {
                        items: [
                            'undo', 'redo',
                            '|', 'heading',
                            '|', 'fontSize', 'fontFamily', 'fontColor', 'fontBackgroundColor',
                            '|', 'bold', 'italic', 'underline', 'strikethrough', 'subscript', 'superscript', 'highlight', 'code',
                            '|', 'link', 'blockQuote', 'codeBlock', 'htmlEmbed', 'sourceEditing',
                            '|', 'alignment', 'indent', 'outdent',
                            '|', 'bulletedList', 'numberedList', 'todoList',
                            '|', 'imageUpload', 'imageInsert', 'mediaEmbed',
                            '|', 'insertTable', 'tableColumn', 'tableRow', 'mergeTableCells',
                            '|', 'specialCharacters', 'horizontalLine', 'pageBreak',
                            '|', 'findAndReplace', 'removeFormat', 'selectAll'
                        ],
                        shouldNotGroupWhenFull: false
                    },
                    // تنظیمات هدینگ
                    heading: {
                        options: [
                            { model: 'paragraph', title: 'Paragraph', class: 'ck-heading_paragraph' },
                            { model: 'heading1', view: 'h1', title: 'Heading 1', class: 'ck-heading_heading1' },
                            { model: 'heading2', view: 'h2', title: 'Heading 2', class: 'ck-heading_heading2' },
                            { model: 'heading3', view: 'h3', title: 'Heading 3', class: 'ck-heading_heading3' },
                            { model: 'heading4', view: 'h4', title: 'Heading 4', class: 'ck-heading_heading4' },
                            { model: 'heading5', view: 'h5', title: 'Heading 5', class: 'ck-heading_heading5' },
                            { model: 'heading6', view: 'h6', title: 'Heading 6', class: 'ck-heading_heading6' }
                        ]
                    },
                    // تنظیمات جدول
                    table: {
                        contentToolbar: [
                            'tableColumn', 'tableRow', 'mergeTableCells', 'tableCellProperties', 'tableProperties'
                        ]
                    },
                    // تنظیمات لینک
                    link: {
                        addTargetToExternalLinks: true,
                        decorators: [
                            {
                                mode: 'manual',
                                label: 'قابلیت دانلود',
                                attributes: { download: 'download' },
                                defaultValue: false
                            },
                        ]
                    },
                    // تنظیمات رنگ فونت
                    fontColor: {
                        colors: [
                            { color: 'red', label: 'قرمز' },
                            { color: 'green', label: 'سبز' },
                            { color: 'blue', label: 'آبی' },
                            { color: 'pink', label: 'صورتی' },
                            { color: '#f7f7f7', label: 'خاکستری' },
                        ]
                    },
                    // تنظیمات رنگ پس‌زمینه
                    fontBackgroundColor: {
                        colors: [
                            { color: 'red', label: 'قرمز' },
                            { color: 'green', label: 'سبز' },
                            { color: 'blue', label: 'آبی' },
                            { color: 'pink', label: 'صورتی' },
                        ]
                    },
                    extraPlugins: [
                        // پلاگین‌های اضافی
                        MyCustomUploadAdapterPlugin,
                    ]
                })
                .then(editor => {
                    window.editor = editor;
                })
                .catch(error => {
                    console.error('There was a problem initializing the editor.', error);
                });

        });
        $('#ImageIn').on('change', function(event) {
            var input = event.target;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#Image').attr('src', e.target.result).show();
                }
                reader.readAsDataURL(input.files[0]);
            }
        });
    </script>

}