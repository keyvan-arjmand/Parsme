@using Domain.Entity.IndexPage
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
Layout = "_LayoutAdmin";
SeoPage seoPage = ViewBag.Index;
}

@section link
{
<style>
    .modal{
        top: 80px;
    }
    img{
        max-width: 650px;
    }
</style>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">مدیریت محتوا</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Admin")">خانه</a>
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- /.col -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link active show" href="#activity" data-toggle="tab">صفحه اصلی</a>
                            </li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active show" id="activity">
                                <form style="background-color:	rgb(220,220,220,0.4)" class="d-flex flex-column gap-2 p-2"
                                      asp-action="UpdateIndexSeo" asp-controller="Admin" method="post" enctype="multipart/form-data">
                                    <input  value="@seoPage.Id" hidden="hidden">

                                    <div class="card card-info card-outline mt-4">
                                        <div class="card-header">
                                            <h3 class="card-title">
                                                <small class="h5"> صفحه اصلی </small>
                                            </h3>
                                            <!-- tools box -->
                                            <div class="card-tools">
                                                <button type="button" class="btn btn-tool btn-sm"
                                                        data-widget="collapse"
                                                        data-toggle="tooltip"
                                                        title="Collapse">
                                                    <i class="fa fa-minus"></i>
                                                </button>
                                                <button type="button" class="btn btn-tool btn-sm"
                                                        data-widget="remove"
                                                        data-toggle="tooltip"
                                                        title="Remove">
                                                    <i class="fa fa-times"></i>
                                                </button>
                                            </div>
                                            <!-- /. tools -->
                                        </div>
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                            <div class=" m-2  p-3 w-100" style="background-color:	rgb(220,220,220,0.4)">
                                                <div class="d-flex justify-content-between">
                                                    <div class="d-flex flex-column">
                                                        <label for="exampleInputPassword1">توضیحات </label>
                                                        <textarea type="text" name="SeoIndexDesc"  id="Desc" class="form-control">@seoPage.SeoIndexDesc</textarea>
                                                    </div>
                                                    <div class="d-flex flex-column">
                                                        <label for="exampleInputPassword1">عنوان </label>
                                                        <input type="text"  name="SeoIndexTitle" id="SmallSideBannerin" value="@seoPage.SeoIndexTitle" title="test" class="form-control">
                                                    </div>
                                                    <div class="d-flex flex-column">
                                                        <label for="exampleInputPassword1">لینک</label>
                                                        <input  name="SeoIndexCanonical" value="@seoPage.SeoIndexCanonical" class="form-control" id="exampleInputPassword1">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="w-100">
                                        <button class="btn btn-success" type="submit"> ثبت</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

@section script{
}