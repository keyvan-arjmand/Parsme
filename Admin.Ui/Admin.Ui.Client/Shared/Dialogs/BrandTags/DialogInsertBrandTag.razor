@inject IDialogService DialogService
@using MudBlazor
@rendermode InteractiveServer
<MudDialog MaxWidth="MaxWidth.Medium" Class="product-seller-dialog" FullWidth="true"
           Style="width: 50rem;height: 35rem; border-radius: 24px;padding: 20px">
    <TitleContent>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <MudIconButton Icon="@Icons.Material.Filled.Close" OnClick="Close"/>
            </div>
            <div>
                <MudText Class="font-weight-bold"
                         Style="font-size: 20px; font-weight: 600; text-align: right;line-height: 35px">
                    افزودن برند
                </MudText>
            </div>

        </div>
    </TitleContent>

    <DialogContent>
        <div class="d-flex justify-content-between flex-column gap-3 mt-5">
            <MudForm @ref="_form" class="d-flex justify-content-start align-items-center flex-column gap-2  w-100"
                     Style="direction: rtl">
                <div class="d-flex justify-content-between align-items-center gap-4 w-100">
                    <div class="w-100">
                        <label class="step-font mb-2 mt-1">عنوان *</label>
                        <MudTextField T="string"
                                      @bind-value="_brandTag.Title"
                                      Placeholder="عنوان برند"
                                      Margin="Margin.Dense"
                                      Variant="Variant.Outlined"
                                      Required="true"
                                      RequiredError=""/>
                    </div>
                    <div class="w-100">
                        <label class="step-font mb-2 mt-1">لوگو *</label>
                        <MudFileUpload T="IBrowserFile" FilesChanged="UploadFiles">
                            <ActivatorContent>
                                <MudButton Variant="Variant.Filled"
                                           Color="Color.Primary"
                                           StartIcon="@Icons.Material.Filled.CloudUpload">
                                    Upload Files
                                </MudButton>
                            </ActivatorContent>
                        </MudFileUpload>
                    </div>
                </div>

            </MudForm>

        </div>

    </DialogContent>
    <DialogActions>
        <div class="w-100">
            <div class="px-3 pb-2 d-flex justify-content-between align-items-end gap-3 w-100 pb-4 pt-4"
                 style="direction: rtl">
                <div class="d-flex justify-content-start gap-4 w-50">
                    <MudButton Class=" w-100 step-font py-3 text-white mt-4"
                               Variant="Variant.Filled" OnClick="InsertVendorProduct "
                               Style="background-color: #5726ba;border-radius: 1rem;height: 48px;min-width: 72px">
                        <MudText>تایید و ثبت</MudText>
                    </MudButton>
                    <MudButton Class=" w-100 step-font py-3 text-white mt-4"
                               Variant="Variant.Filled" Color="Color.Default" OnClick="Close"
                               Style="border-radius: 1rem;height: 48px;color: #717680!important;min-width: 72px">
                        <MudText>انصراف</MudText>
                    </MudButton>
                </div>

            </div>
        </div>
    </DialogActions>
</MudDialog>