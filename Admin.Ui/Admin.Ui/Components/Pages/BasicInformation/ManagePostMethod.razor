@page "/ManagePostMethod"
@using Application.Interfaces
@using Domain.Entity.User
@using Microsoft.EntityFrameworkCore
<PageTitle>مدیریت روش های ارسال</PageTitle>

<div style="padding: 15px">
    <h4 class="fw-bold py-3 mb-4" style="direction: rtl"><span class="text-muted fw-light">اطلاعات پایه /</span>روش های ارسال
    </h4>
    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover" style="direction: rtl">
                <thead>
                <tr>
                    <th class="text-center">شماره</th>
                    <th class="text-center">عنوان</th>
                    <th class="text-center">هزینه</th>
                    <th class="text-center">عملیات</th>
                </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                @foreach (var i in _postMethods)
                {
                    <tr>
                        <td class="text-center">
                            <i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong>@i.Id</strong>
                        </td>
                        <td class="text-center">
                            @i.Title
                        </td>
                        <td class="text-center">
                           @if (i.Price>0)
                           {
                               <span>@i.Price.ToString("N0")</span>

                           }
                           else
                           {
                               <span>رایگان</span>

                           }
                        </td>
                        <td class="text-center">
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                        data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="javascript:void(0);"><i
                                            class="bx bx-edit-alt me-1"></i>
                                        ویرایش</a
                                    >
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i>
                                        حذف</a
                                    >
                                </div>
                            </div>
                        </td>
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>

</div>